generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id            String        @id
  name          String
  country       String
  currency      String
  taxName       String?
  taxPercentage Float?
  createdAt     DateTime      @default(now())
  CompanyUser   CompanyUser[]
  Product       Product[]
  Sale          Sale[]
}

model CompanyUser {
  id        String  @id
  companyId String
  userId    String
  role      String
  Company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  User      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([companyId, userId])
}

model Product {
  id             String           @id
  name           String
  description    String?
  category       String?
  active         Boolean          @default(true)
  companyId      String
  Company        Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  ProductVariant ProductVariant[]
}

model ProductVariant {
  id        String  @id
  sku       String  @unique
  size      String?
  color     String?
  costPrice Float?
  salePrice Float?
  barcode   String?
  productId String
  Product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Sale {
  id               String   @id
  totalAmount      Float
  taxAmount        Float?
  commissionAmount Float?
  createdAt        DateTime @default(now())
  companyId        String
  sellerId         String
  Company          Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  User             User     @relation(fields: [sellerId], references: [id])
}

model User {
  id          String        @id
  name        String
  email       String        @unique
  password    String
  active      Boolean       @default(true)
  createdAt   DateTime      @default(now())
  CompanyUser CompanyUser[]
  Sale        Sale[]
}